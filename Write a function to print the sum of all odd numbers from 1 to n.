
import java.util.*;
public class homework {
    public static int average(int a) {
        int sum = 0;
        for (int i = 0; i <= a; i++) {
            if (i % 2 != 0) {



                sum = sum + i;
                

            }
        }
        System.out.println(sum);

        return sum;
    }
    public static void main (String args[]){
        Scanner sc =new Scanner(System.in);
        int a = sc.nextInt();
        average(a);
    }
}

